extends layout

block body
  .container
    .row
      h1 Users
      p Users who have rated the same movies as you will be listed below, along with the correlation coefficient.
      p Total number of similarities:&nbsp;
        b= usersSimilarities.length
    ul.list-group
      each similarity in usersSimilarities
        li.list-group-item
          table.table.table-striped
            thead
              tr: th: a(href= `/user/${similarity.user.username}`)= similarity.user.username
                th Similarity
            tbody
              tr
                td: b Euclidean distance
                td= similarity.euclideanDistance.toFixed(2)
              tr
                td: b Manhattan distance
                td= similarity.manhattanDistance.toFixed(2)
              tr
                td: b PCC
                td= similarity.pcc.toFixed(2)
